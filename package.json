{
  "name": "@reactory/class-name",
  "version": "0.0.0-development",
  "description": "Manageable, toggleable, conditional CSS classes in React.",
  "author": "Richard King <richrdkng@gmail.com> (https://richrdkng.com)",
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/reactory/class-name#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/reactory/class-name.git"
  },
  "bugs": {
    "url": "https://github.com/reactory/class-name/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "reactory",
    "class",
    "classes",
    "classname",
    "classnames",
    "className",
    "classNames",
    "class-name",
    "class-names"
  ],
  "ts-standard": {
    "ignore": [
      ".dist",
      "*.js"
    ]
  },
  "scripts": {
    "lint": "ts-standard --verbose | snazzy",
    "lint:fix": "ts-standard --fix --verbose | snazzy",
    "test": "jest",
    "prep": "rm -rf .dist && mkdir .dist && cp LICENSE package.json README* .dist/",
    "_build:src": "rollup -c",
    "_build:types": "tsc -p tsconfig.types.json",
    "build": "npm run _build:src && npm run _build:types"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/create-react-app": "^1.0.3",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "rollup": "^3.20.2",
    "semantic-release": "^21.0.1",
    "snazzy": "^9.0.0",
    "string-dedent": "^3.0.1",
    "ts-jest": "^29.1.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
